CC := clang
CFLAGS := -c -g -emit-llvm

MACROS := ./null_macros/c.m4.null.POSIX
M4 := m4 -s -Ulen -Uindex

$(TARGET): $(OBJS)
	llvm-link $(OBJS) -o $(TARGET)

clean:
	rm -rf *.c *.h *.o $(TARGET)

.SUFFIXES:
.SUFFIXES:	.o .c .C .h .H

.H.h:
	$(M4) $(MACROS) $*.H > $*.h

.C.c:
	$(M4) $(MACROS) $*.C > $*.c

.c.o:
	$(CC) -c $(CFLAGS) $*.c

.C.o:
	$(M4) $(MACROS) $*.C > $*.c
	$(CC) -c $(CFLAGS) $*.c
